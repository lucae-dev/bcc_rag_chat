<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="bck_rag_chat.mapper.primary.DocumentMapper">

    <resultMap id="DocumentResultMap" type="bck_rag_chat.document.model.Document">
        <id property="id" column="id" typeHandler="bck_rag_chat.configuration.typehandler.UUIDTypeHandler" />
        <result property="document" column="document" />
        <result property="ownerId" column="owner_id" typeHandler="bck_rag_chat.configuration.typehandler.UUIDTypeHandler" />
        <result property="groupId" column="group_id" typeHandler="bck_rag_chat.configuration.typehandler.UUIDTypeHandler" />
        <result property="embedding" column="embedding" typeHandler="bck_rag_chat.configuration.typehandler.VectorTypeHandler"/>
        <result property="parentDocumentId" column="parent_document_id" typeHandler="bck_rag_chat.configuration.typehandler.UUIDTypeHandler" />
    </resultMap>

    <!-- Insert Document -->
    <insert id="insertDocument" parameterType="bck_rag_chat.document.model.Document" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO documents (document, owner_id, group_id, embedding, parent_document_id)
        VALUES (#{document}, #{ownerId}, #{groupId}, #{embedding}, #{parentDocumentId})
    </insert>

    <!-- Select Document by ID -->
    <select id="getDocumentById" resultMap="DocumentResultMap" parameterType="java.util.UUID">
        SELECT id, document, owner_id, group_id, embedding, parent_document_id
        FROM documents
        WHERE id = #{id}
    </select>

    <!-- Update Document with Optional Parameters -->
    <update id="update" parameterType="bck_rag_chat.document.model.Document">
        UPDATE documents
        <set>
            <if test="document != null">
                document = #{document},
            </if>
            <if test="ownerId != null">
                owner_id = #{ownerId},
            </if>
            <if test="groupId != null">
                group_id = #{groupId},
            </if>
            <if test="embedding != null">
                embedding = #{embedding},
            </if>
            <if test="parentDocumentId != null">
                parent_document_id = #{parentDocumentId},
            </if>
        </set>
        WHERE id = #{id}
    </update>

    <!-- Delete Document -->
    <delete id="delete" parameterType="java.util.UUID">
        DELETE FROM documents WHERE id = #{id}
    </delete>

    <!-- Find Similar Documents with Optional Filters -->
    <select id="findSimilarDocuments" resultMap="DocumentResultMap" parameterType="map">
        SELECT id, document, owner_id, group_id, embedding, parent_document_id
        FROM documents
        WHERE owner_id = #{ownerId}
        <if test="groupId != null">
            AND group_id = #{groupId}
        </if>
        <if test="parentDocumentId != null">
            AND parent_document_id = #{parentDocumentId}
        </if>
        ORDER BY embedding &lt;-&gt; CAST(#{embedding} AS vector)
        LIMIT #{limit}
    </select>

</mapper>